{
  "name": "@solid-design-system/root",
  "version": "1.0.0",
  "homepage": "https://solid-design-system.fe.union-investment.de/x.x.x/storybook/",
  "author": {
    "name": "Union Investment"
  },
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "// prepare": "We don't want to start the prepare script for husky when we don't install the dev dependencies.",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "verify": "pnpm format.verify && pnpm lint.verify && pnpm --recursive --if-present verify",
    "fix": "pnpm lint.fix && pnpm format.fix",
    "lint.fix": "eslint packages --max-warnings 0 --fix",
    "lint.verify": "eslint packages --max-warnings 0 && echo 'âœ… Linting verified'",
    "format.verify": "prettier --check --log-level warn . && echo 'âœ… Formatting verified'",
    "format.fix": "prettier --write --log-level warn .",
    "release.dry": "pnpm --recursive --if-present release.dry --filter"
  },
  "lib": "es2021",
  "keywords": [],
  "license": "MIT",
  "engines": {
    "node": ">=16.17.0",
    "pnpm": ">=8.6.2"
  },
  "lint-staged": {
    "*": [
      "cd packages/components pnpm fix",
      "pnpm format"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-lit": "^1.8.3",
    "eslint-plugin-lit-a11y": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-wc": "^1.5.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0"
  }
}
