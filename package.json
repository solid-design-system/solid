{
  "name": "@union-investment/solid",
  "description": "A solid set of web components.",
  "version": "1.0.0",
  "homepage": "https://solid.union-investment.com",
  "author": "Union Investment",
  "license": "MIT",
  "customElements": "dist/custom-elements.json",
  "web-types": "dist/web-types.json",
  "type": "module",
  "types": "dist/solid.d.ts",
  "exports": {
    ".": {
      "types": "./dist/solid.d.ts",
      "import": "./dist/solid.js"
    },
    "./dist/themes/*": "./dist/themes/*",
    "./dist/components/*": "./dist/components/*",
    "./dist/translations/*": "./dist/translations/*"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "web components",
    "custom elements",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://Union-Investment@dev.azure.com/Union-Investment/Frontend/_git/solid-components"
  },
  "scripts": {
    "dev": "concurrently \"node scripts/build.js --dev\" \"pnpm storybook\" ",
    "build": "node scripts/build.js",
    "build-storybook": "storybook build",
    "build:watch": "pnpm vite build --watch",
    "verify": "npm run prettier:check && npm run lint && npm run build && npm run test",
    "prepublishOnly": "npm run verify",
    "prettier": "prettier --write --loglevel warn .",
    "prettier:check": "prettier --check --loglevel warn .",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --max-warnings 0 --fix",
    "ts-check": "tsc --noEmit --project ./tsconfig.json",
    "plop": "plop --plopfile scripts/plop/plopfile.js",
    "test": "vite build && web-test-runner --group default",
    "test:component": "web-test-runner -- --watch --group",
    "test:watch": "web-test-runner --watch --group default",
    "storybook": "storybook dev -p 6999",
    "storybook:build": "storybook build"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^3.6.0",
    "@floating-ui/dom": "^1.2.6",
    "@lit-labs/react": "^1.1.1",
    "@mariohamann/tailwindcss-var": "github:mariohamann/tailwindcss-var",
    "@mariohamann/wc-storybook-helpers": "^1.1.1",
    "@open-wc/lit-helpers": "0.5.1",
    "@shoelace-style/animations": "^1.1.0",
    "@shoelace-style/localize": "^3.1.0",
    "@storybook/addons": "^7.0.7",
    "@storybook/theming": "^7.0.7",
    "chokidar": "^3.5.3",
    "classix": "^2.1.30",
    "cssnano": "^6.0.0",
    "lit": "^2.7.2",
    "normalize.css": "^8.0.1",
    "qr-creator": "^1.0.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "vite": "^4.3.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.8.0",
    "@open-wc/testing": "^3.1.8",
    "@storybook/addon-essentials": "^7.0.7",
    "@storybook/addon-links": "^7.0.7",
    "@storybook/addon-mdx-gfm": "^7.0.7",
    "@storybook/blocks": "^7.0.7",
    "@storybook/web-components": "^7.0.7",
    "@storybook/web-components-vite": "^7.0.7",
    "@types/mocha": "^10.0.1",
    "@types/react": "^18.0.38",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/test-runner": "^0.16.1",
    "@web/test-runner-commands": "^0.7.0",
    "@web/test-runner-playwright": "^0.10.0",
    "autoprefixer": "^10.4.14",
    "bootstrap-icons": "^1.10.4",
    "cem-plugin-vs-code-custom-data-generator": "^1.4.1",
    "chalk": "^5.2.0",
    "chromatic": "^6.17.3",
    "command-line-args": "^5.2.1",
    "comment-parser": "^1.3.1",
    "concurrently": "^8.0.1",
    "del": "^7.0.0",
    "download": "^8.0.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-lit": "^1.8.3",
    "eslint-plugin-lit-a11y": "^2.4.1",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-wc": "^1.5.0",
    "front-matter": "^4.0.2",
    "globby": "^13.1.4",
    "husky": "^8.0.3",
    "jsonata": "^2.0.3",
    "lint-staged": "^13.2.1",
    "lit-html": "^2.7.2",
    "lunr": "^2.3.9",
    "pascal-case": "^3.1.2",
    "plop": "^3.1.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recursive-copy": "^2.0.14",
    "sinon": "^15.0.4",
    "source-map": "^0.7.4",
    "storybook": "^7.0.7",
    "strip-css-comments": "^5.0.0",
    "tailwindcss": "^3.3.1",
    "tslib": "^2.5.0",
    "typescript": "5.0.4",
    "user-agent-data-types": "^0.3.1",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 0 --cache --fix",
      "prettier --write"
    ]
  }
}
