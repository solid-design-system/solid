{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "autoApprove": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "automerge": true
    },
    {
      "matchDepNames": ["node", "pnpm", "nx"],
      "enabled": false
    }
  ],
  "prConcurrentLimit": 10
}
