{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.Iterable", "es2022"],
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false /* See https://lit.dev/docs/components/properties/#avoiding-issues-with-class-fields */,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "baseUrl": ".",
    "types": ["user-agent-data-types", "vite/client"],
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": ["src/**/*", "vite.config.ts", "scripts/**/*.ts", "playwright.config.ts"]
}
