  "scripts": {
    "dev": "pnpm storybook",
    "storybook": "storybook dev -p 6999",
    "verify": "pnpm ts.verify && pnpm build && echo '‚úÖ Build verified' && pnpm test && echo '‚úÖ Tests verified' && vite-node ./scripts/node-optimize-chromatic.cjs && echo '‚úÖ Chromatic optimization verified'",
    "ts.verify": "tsc --noEmit --project ./tsconfig.json && echo '‚úÖ TypeScript verified'",
    "test": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm preview\" \"wait-on -v -t 5s http://localhost:6999 && test-storybook --url http://localhost:6999\"",
    "test.watch": "echo 'üõ†Ô∏è TO BE IMPLEMENTED'",
    "build.chromatic": "pnpm build && node ./scripts/node-optimize-chromatic.cjs",
    "chromatic": "npx chromatic -b build.chromatic",
    "build": "pnpm build/components && pnpm build/styles && storybook build --output-dir dist/storybook && vite-node scripts/node-optimize-storybook.js",
    "build/components": "cd ../components && pnpm build",
    "build/styles": "cd ../styles && pnpm build",
    "preview": "vite preview --port \"6999\" --outDir \"dist/storybook\""
  },
