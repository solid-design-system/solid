{
  "name": "@solid-design-system/eslint-plugin",
  "description": "ESLint custom rules for the Solid Design System component library",
  "version": "1.0.1",
  "type": "module",
  "author": {
    "name": "Union Investment"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "solid-design-system",
    "Solid Design System"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "node scripts/build.mjs",
    "test": "jest",
    "verify": "pnpm build && echo '✅ Build verified' && pnpm test && echo '✅ Tests verified'",
    "plop": "plop --plopfile scripts/plop/plopfile.js",
    "postversion": "pnpm build"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@typescript-eslint/rule-tester": "^8.39.0",
    "@typescript-eslint/utils": "^8.39.0",
    "es-html-parser": "^0.3.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "globby": "^14.1.0",
    "jest": "^30.0.5",
    "plop": "^4.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@html-eslint/parser": "^0.44.0",
    "eslint": "^9.18.0"
  },
  "dependencies": {
    "@html-eslint/parser": "^0.44.0"
  }
}
